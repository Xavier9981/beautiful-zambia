<li>
    <article class="snippet">
        <div>
            <img src= "{{ post.data.image }}" alt="{{ post.data.imageAlt }}" class="snippet-image">
            <figcaption class="figcap t-align-center">{{ post.data.imageAlt }}</figcaption>
        </div>
        
        <div>
            <hr class="hr-top">
            <h3 class="snippet-title"><a href="post.url">{{ post.data.title }}</a></h3>
            <p class="snippet-meta"> <span>by</span> {{ post.data.author }} <span>on</span> {{ post.date | postDate }}</p>
            <p class="snippet-body">{{ post.data.description }}</p> 
            <a href="{{post.url}}" class="btn btn--primary">Continue Reading</a>
            <hr class="hr-bottom">
        </div>
    </article>
</li>