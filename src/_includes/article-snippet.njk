<li>
    <article class="snippet">
        <div>
            <img src= "{{ post.data.image }}" alt="{{ post.data.imageAlt }}" class="snippet-image">
            <figcaption class="figcap t-align-center">{{ post.data.imageAlt }}</figcaption>
        </div>
        <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-7587764121279484"
     crossorigin="anonymous"></script>
    <!-- horizontal ads -->
    <ins class="adsbygoogle"
        style="display:block"
        data-ad-client="ca-pub-7587764121279484"
        data-ad-slot="5794985680"
        data-ad-format="auto"
        data-full-width-responsive="true"></ins>
    <script>
        (adsbygoogle = window.adsbygoogle || []).push({});
    </script>
        
        <div>
            <hr class="hr-top">
            <h3 class="snippet-title"><a href="post.url">{{ post.data.title }}</a></h3>
            <p class="snippet-meta"> <span>by</span> {{ post.data.author }} <span>on</span> {{ post.date | postDate }}</p>
            <p class="snippet-body">{{ post.data.description }}</p> 
            <a href="{{post.url}}" class="btn btn--primary">Continue Reading</a>
            <hr class="hr-bottom">
        </div>
    </article>
</li>